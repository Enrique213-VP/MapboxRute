<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_margin="12dp"
    app:cardBackgroundColor="@color/blue"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:contentPadding="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/red_marker"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/nameLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@id/itemImage"
            android:layout_toRightOf="@id/itemImage"
            android:layout_alignParentTop="true"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/CountryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameLocation"
            android:layout_toEndOf="@id/itemImage"
            android:layout_toRightOf="@id/itemImage"
            android:text="Pais: "
            android:textColor="@color/white"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/CountryLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:layout_toEndOf="@id/CountryTitle"
            android:layout_toRightOf="@id/CountryTitle"
            android:text="italy"
            android:layout_below="@id/nameLocation"/>

        <Button
            android:id="@+id/locationP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubicar"
            android:backgroundTint="@color/secondaryLightColor"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/CountryTitle"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>